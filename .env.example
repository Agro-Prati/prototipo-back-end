# ===================================
# Configurações do Backend - AgroMais
# Copie este arquivo para .env e ajuste os valores
# ===================================

# Database PostgreSQL
DB_HOST=localhost
DB_PORT=5433
DB_NAME=agro_prototipo_db
DB_USER=postgres
DB_PASSWORD=postgres

# JWT Configuration
JWT_SECRET=agromais-secret-key-change-in-production-2025-make-it-long-enough
JWT_EXPIRATION=86400000

# Server Configuration
SERVER_PORT=8080

# CORS Configuration (URLs separadas por vírgula)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:4200

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_AGROMAISPRATI=DEBUG

# Spring Profile
SPRING_PROFILES_ACTIVE=dev
